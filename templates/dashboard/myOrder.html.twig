{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    {{ include('dashboard/_nav.html.twig') }}

    <div class="container">
        <br/>
        <h2> Mes commandes </h2>
        <br/>
        
        <table class="table">
            <thead>
                <tr>
                <th scope="col">Date</th>
                <th scope="col">Commande</th>
                <th scope="col">Status</th>
                <th scope="col">Téléchargement</th>
                <th scope="col">Prix</th>
                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <th scope="row">{{ order.created|date("m/d/Y") }}</th>
                    <td>{{ order.id }}</td>
                    {% if order.status == 'waiting for payment' or order.status == 'In progress'  %}
                        <td class='orange'> {{ order.status }}</td>
                    {% elseif order.status == 'finish' %}
                        <td class='green'> {{ order.status }}</td>
                    {% endif %}

                        <td>
                                    <a href="{{ asset("product/" ~ order.product.file)  }}" 
                                        download>
                                        <button type="button" class="btn btn-success">Download product</button>
                                        </a>
                        </td>
                    
                    
                    <td>{{ order.amount }} €</td>
                </tr>
            {% endfor %}

            {% if orders|length < 1 %}
            <p> Vous n'avez pas encore effectué de commande sur la place de marché. Commencez donc par acheter un produit, ou vendez les votres.
            {% endif %}

            </tbody>
        </table>

    </div>

{% endblock %}
