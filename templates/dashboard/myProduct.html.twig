{% extends 'base.html.twig' %}


{% block title %}Dashboard{% endblock %}

{% block body %}
    <!-- display products that customers have purchased, available for download -->

    {{ include('dashboard/_nav.html.twig') }}

    <div class="container">
        <br/><br/>
        <h2> Dashboard {{ user.email }} </h2>
        <br/>


        <h2> Produits disponible aux téléchargements </h2>
        <br/>
        {% if orders > 0  %}
            {% for order in orders %}
            <div class="card">
                <div class="card-header">
                    {{ order.product.name }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ order.product.price }} €</h5>
                    <p class="card-text">{{ order.product.description }}</p>
                    <p class="card-text">Vente : {{ order.product.numberSale }}</p>
                    {%   if order.product.demoLink != NULL %}
                        <a href="{{ order.product.demoLink }}" class="btn btn-info">Demo</a>
                    {% else %}
                        <p> Pas de démonstration.</p>
                    {%  endif  %}
                    <a href="{{ path('product_show', {'id': order.product.id}) }}" class="btn btn-primary">voir plus</a>

                    <a href="{{ path('product_edit', {'id': order.product.id}) }}">Modifier</a> <!-- Todo -->

                    {{ include('product/_delete_form.html.twig') }} <!-- Todo -->

                    {% if order.product.img1 != NULL %}
                        <img class="card-img-top" src="../product/img/{{ order.product.img1 }}" alt="{{ order.product.name }}"
                            style=" width: 50%; height: 500px;">
                    {% endif %}
                </div>

                <div class="product-button">
                    

                    <button type="button">
                        <a href="{{ asset("product/" ~ order.product.file)  }}" 
                            download>
                            <button type="button" class="btn btn-success">Download product</button>
                            </a>
                    </button>
                </div>
            </div>
                <br/><br/>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
        {% endfor %}
        {% else %}
            <p> vous n'avez pas encore de produit en vente </p>
        {% endif %}

    </div>

{% endblock %}
