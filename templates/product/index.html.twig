							<h2 class="major"><span>Nos produits</span></h2>

							<div class="item-container">
								<h3> Nos meilleurs produits </h3>
								<div class="row">
									{% for bestSell in bestSell %}
									<div class="col-lg-6">
										<div class="card" style="width: 35rem;">
											<img class="card-img-top" src="product/img/{{ bestSell.img1 }}" alt="Card image cap">
											<div class="card-body">
												<h5 class="card-title">{{ bestSell.name }}</h5>
												<p class="card-text"> {{ bestSell.description }}</p>
													<div class="col-lg-4 d-flex justify-content-around">
														<a href="{{ path('product_show', {'id': bestSell.id}) }}" class="btn btn-info"><i class="fa fa-eye" aria-hidden="true"></i></a>
														<a href="{{ path('order', { 'product': bestSell.id }  ) }}" class="btn btn-info"><i class="fa fa-shopping-cart" aria-hidden="true"></i>  </a>
													</div>
											</div>
										</div>
									</div>
									{% endfor %}
								</div>
								<br/><hr>

								<h3> Nouveaux produits </h3>
								<div class="row">
								{% for newProduct in newProduct %}
									<div class="col-lg-6">
										<div class="card" style="width: 35rem;">
											<img class="card-img-top" src="product/img/{{ newProduct.img1 }}" alt="Card image cap">
											<div class="card-body">
												<h5 class="card-title">{{ newProduct.name }}</h5>
												<p class="card-text"> {{ newProduct.description }}</p>
													<div class="col-lg-4 d-flex justify-content-around">
														<a href="{{ path('product_show', {'id': newProduct.id}) }}" class="btn btn-info"><i class="fa fa-eye" aria-hidden="true"></i></a>
														<a href="{{ path('order', { 'product': newProduct.id }  ) }}" class="btn btn-info"><i class="fa fa-shopping-cart" aria-hidden="true"></i>  </a>
													</div>
											</div>
										</div>
									</div>

								{% endfor %}
								</div>
								<br/><hr>
								
								<h3> Produits gratuits </h3>
								<div class="row">
									{% for FreeProduct in FreeProduct %}
									<div class="col-lg-6">
											<div class="card" style="width: 35rem;">
												<img class="card-img-top" src="product/img/{{ FreeProduct.img1 }}" alt="Card image cap">
												<div class="card-body">
													<h5 class="card-title">{{ FreeProduct.name }}</h5>
													<p class="card-text"> {{ FreeProduct.description }}</p>
													<span class="deepskyblue deepskyblue-text-middle font1"> <strong> Produit gratuit </strong>  </span>
										<div class="row middle-align-row">
										{% if FreeProduct.price == 0 %}
											<div class="col-lg-4 d-flex justify-content-around">
													<a href="{{ asset("product/" ~ FreeProduct.file)  }}" 
														download>
														<button type="button" class="btn btn-success download-btn-free">Download</button>
													</a>
											</div>
											<div class="col-lg-6 d-flex">
													<a href="{{ path('product_show', {'id': FreeProduct.id}) }}"> 
														<button type="button" class="btn btn-secondary download-btn-free btn-deepskyblue">Voir le produit </button>
													</a>
											</div>
										{% endif %}
												</div>
											</div>
										</div>
									</div>
									{% endfor %}
								</div>
