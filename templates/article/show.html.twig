{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}

<section id="main">
					<div class="container">
						<div class="row">
							<div class="col-12">
								<div class="content">

									<!-- Content -->

										<article class="box page-content">

											<header>
												<h2>{{ article.title }}</h2>
												<p>{{ article.description }}</p>
												<ul class="meta">
													<li class="icon fa-clock">{{ article.createdAt ? article.createdAt|date('d m Y') : '' }}</li>
													<!--<li class="icon fa-comments"><a href="#">1,024</a></li>-->
												</ul>
											</header>

											<section>
												<span class="image featured"><img src="../article/img/{{ article.img1 }}" alt="{{ article.title }}" /></span>
												<p>
													{{ article.content }}
												</p>
											</section>

										</article>

								</div>
							</div>
						</div>
					</div>
				</section>

